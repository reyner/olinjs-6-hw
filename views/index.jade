extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href="#", id="ui-carousel-next")
    | next 
  a(href="#", id="ui-carousel-prev")
    | prev
  div(id="carousel")
    each photo, i in data
      div(class="carouselItem")
        img(src="#{photo.source}", width="#{photo.width}", height="#{photo.height}")
        form(method="post", action="/intermediate/comment", id="commentForm")
          input(type="hidden", name="fbid", value="#{photo.id}")
          | Comment Box bro 
          input(type="text", name="comment")
          button('type='submit')
            | Go